<header class="relative z-20 bg-white bg-opacity-90 backdrop-blur-xl backdrop-filter">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 flex h-16 items-center">
    <!-- Mobile Menu Toggle -->
    <button
      id="mobile-menu-button"
      type="button"
      class="relative rounded-md bg-white p-2 text-gray-400 lg:hidden"
      aria-controls="mobile-menu"
    >
      <span class="sr-only">Open menu</span>
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
    </button>

    <!-- Logo -->
    <div class="ml-4 flex lg:ml-0">
      <a href="{{ routes.root_url }}">
        <span class="sr-only">{{ shop.name }}</span>
        <img
          class="lg:h-10 h-8 w-auto"
          src="{{ section.settings.logo | image_url: width: 200 }}"
          alt="{{ shop.name }}"
          width="auto"
          height="auto"
        >
      </a>
    </div>

    <!-- Navigation -->
    {% render 'header-navigation', menu: section.settings.menu %}

    <!-- Utility Links -->
    {% render 'header-utility' %}
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "tag": "section",
  "class": "header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
