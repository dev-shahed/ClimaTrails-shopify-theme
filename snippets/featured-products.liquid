<section aria-labelledby="favorites-heading">
  <div class="mx-auto max-w-7xl px-4 py-24 sm:px-6 sm:py-32 lg:px-8">
    <div class="sm:flex sm:items-baseline sm:justify-between">
      <h2 id="favorites-heading" class="text-2xl font-bold tracking-tight text-gray-900">Featured Products</h2>
      <a
        href="{{ routes.all_products_collection_url }}"
        class="hidden text-sm font-semibold text-indigo-600 hover:text-indigo-500 sm:block"
      >
        Browse all products
        <span aria-hidden="true"> &rarr;</span>
      </a>
    </div>

    <div class="mt-6 grid grid-cols-1 gap-y-10 sm:grid-cols-3 sm:gap-x-6 sm:gap-y-0 lg:gap-x-8">
      {% for product in collections['featured-products'].products %}
        <div class="group relative">
          <div class="h-96 w-full overflow-hidden rounded-lg sm:aspect-h-3 sm:aspect-w-2 group-hover:opacity-75 sm:h-auto">
            <img
              src="{{ product.featured_image | img_url: 'large' }}"
              alt="{{ product.title }}"
              class="h-full w-full object-cover object-center"
              loading="lazy"
              width="300"
              height="300"
            >
          </div>
          <h3 class="mt-4 text-base font-semibold text-gray-900">
            <a href="{{ product.url }}">
              <span class="absolute inset-0"></span>
              {{ product.title }}
            </a>
          </h3>
          <p class="mt-1 text-sm text-gray-500">{{ product.price | money }}</p>
        </div>
      {% endfor %}
    </div>

    <div class="mt-6 sm:hidden">
      <a
        href="{{ routes.all_products_collection_url }}"
        class="block text-sm font-semibold text-indigo-600 hover:text-indigo-500"
      >
        Browse all products
        <span aria-hidden="true"> &rarr;</span>
      </a>
    </div>
  </div>
</section>
